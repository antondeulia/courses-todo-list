generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id Int @id @default(autoincrement())

  title String
  description String?
  status TaskStatusEnum @default(new)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tasks")
}

enum TaskStatusEnum {
  new
  doing
  completed
  closed
}
